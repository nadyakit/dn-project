<p id="notice"><%= notice %></p>

<h2>All Categories</h2>
<% Category.all.each do |cat| %>
	<%= link_to cat.name, posts_path(category: cat.name) %> <br>
<% end %>

<div class="header">
  <%= link_to 'О нас', about_path %>
  <%= link_to 'Промо', promo_path %>
  <%= link_to 'Блог', posts_path %>
  <h1 class="naming">B8</h1>
</div>

<% if user_signed_in? && current_user.isadmin == true %>
<div class="header_second_row">
  <h1>Посты</h1>
  <%= link_to 'Создать пост', new_post_path, :class =>"new_post" %>
  <%= link_to 'New Category', new_category_path %>
</div>
<% end %>

<table class="main_page_table">
  <thead>
    <tr>
      <!-- <th>Name</th>
      <th>Title</th>
      <th>Category</th>
      <th>Content</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="posts">
    <% @posts.each do |post| %>
      <tr class="post_structure">
        <td class="photo_block"><%= image_tag(post.image.url, alt: 'Image')%></td>
        <td class="post_name"><%= post.name%></td>
        <td class="post_title"><%= post.title%></td>
        <td><%= post.category.name %></td>
        <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
        <td><%= post.comments.count %> <%= (post.comments.count) == 1 ? 'Comment' : 'Commentes'%></td>

        <%= link_to 'Show', post, :class =>"show_button" %>

        <% if user_signed_in? && current_user.isadmin == true %>
          <%= link_to 'Edit', edit_post_path(post), :class =>"edit_button" %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"destroy_button" %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
