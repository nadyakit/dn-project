<p id="notice"><%= notice %></p>

<div class="header">
  <%= link_to 'О нас', about_path %>
  <%= link_to 'Промо', promo_path %>
  <%= link_to 'Блог', posts_path %>
  <h1 class="naming">B8</h1>
</div>

<div class="show_header_second_row">
  <%= link_to 'Обратно', posts_path %>
</div>

<div class="whole_show">
<div class="show_image">
	<%= image_tag(@post.image.url, alt: '') if @post.image? %>
</div>

<p class="show_name">
  <strong></strong>
  <%= @post.name %>
</p>

<p class="show_title">
  <strong></strong>
  <%= @post.title %>
</p>

<p class="show_content">
  <strong></strong>
  <%= @post.content %>
</p>

<h2 class="show_comments">Комментарии</h2>
<%= render @post.comments %>

<h2 class="show_add_comment">Добавить комментарий</h2>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post), :class =>"show_edit_button" %>
</div>
